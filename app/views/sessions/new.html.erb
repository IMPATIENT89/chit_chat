<h2 class="ui center aligned large header">Welcome to ChitChat - <em>a complete Chat App</em></h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Login to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, url: login_path, local: true) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter the password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Log in", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big inverted orange button">
        <i class="signup orange icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>